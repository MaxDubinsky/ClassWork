#include <iostream>

using namespace std;

class Weapon {
protected:
	unsigned short damage;
	unsigned short weight;
	unsigned short numberOfCartridgesInTheClip;
	unsigned short numberOfClips;
	unsigned short accuracy; // 0.1 -> 0.9
	double rateOfFire; // 0.1 -> 0.9
public:
	void setDamage() {};
};

class Empty : public Weapon {
public:
	Empty() {
		this->damage = 5;
		this->weight = 0;
		this->numberOfCartridgesInTheClip = NULL;
		this->numberOfClips = NULL;
		this->accuracy = 0.8;
		this->rateOfFire = 0.1;
	}
};

class Glock : public Weapon {
public:
	Glock() {
		this->damage = 18;
		this->weight = 10;
		this->numberOfCartridgesInTheClip = 9;
		this->numberOfClips = 17;
		this->accuracy = 0.7;
		this->rateOfFire = 0.1;
	}
};

class AK47 : public Weapon {
public:
	AK47() {
		this->damage = 31;
		this->weight = 15;
		this->numberOfCartridgesInTheClip = 30;
		this->numberOfClips = 5;
		this->accuracy = 0.4;
		this->rateOfFire = 0.2;
	}
};

class M4A1 : public Weapon {
public:
	M4A1() {
		this->damage = 28;
		this->weight = 15;
		this->numberOfCartridgesInTheClip = 30;
		this->numberOfClips = 5;
		this->accuracy = 0.5;
		this->rateOfFire = 0.15;
	}
};

class ShortGun : public Weapon {
public:
	ShortGun() {
		this->damage = 51;
		this->weight = 36;
		this->numberOfCartridgesInTheClip = 7;
		this->numberOfClips = 8;
		this->accuracy = 0.2;
		this->rateOfFire = 0.35;
	}
};

class Character {
protected:
	// unsigned short 0 -> 65535
	unsigned short hp = 100;
	unsigned short speed = 255;
	unsigned short armor = 0;
	unsigned short stamina = 0;
public:
	void search(Player player) {}
	void search(Bot bot) {}
};

class Bot : public Character, public Weapon {
public:
	void chooseWeapon() {
		Empty a;
		Glock b;
		AK47 c;
		M4A1 d;
		ShortGun e;
		
		int choice = rand() % 5;
		switch (choice)
		{
		case 1:
			this->damage = a.setDamage();
		}
	}

	void fire(Character target) {
		
	}
};

class Player : public Character {
protected:
	string name;
public:
	void setName(string name) { this->name = name; }
	string getName() { return this->name; }

};


int main()
{
	Player player;
	Bot bot;
}
