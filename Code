#include <iostream>

using namespace std;


class Book {
private:
	Year year;
	Month month;
	Day day;
	Time time;
	Entry entr;
public:
	Book(int year) {
		this->year.setYear(year);
	}
	void createNote() {
		int choice;
		entr.setEntry();
		time.setTime();
		day.setDays();
		month.setMonth();
		cout << "You created a new Note " << '"' << entr.getTitle() << '"' << ".\n";
		do
		{
			cout << "Show note? (1 - Yes, 2 - No)";
			switch (choice)
			{
			case 1:
				entr.get();
				time.get();
				day.get();
				month.get();
				year.get();
			}
		} while (choice != 1 || choice != 2);
	}
};

class Time {
private:
	int hours;
	int minutes;
	string outPutTime;
public:
	Time(int hours, int minutes) {
		if (hours >= 0 && hours <= 24) {
			this->hours = hours;
		}
		if (minutes >= 0 && minutes <= 60) {
			this->minutes = minutes;
		}
		outPutTime = hours + ":" + minutes;
	}
	int setTime() {
		cout << "MINUTES: ";
		cin >> this->minutes;
		cout << "HOURS: ";
		cin >> this->hours;
	}
	int get() {
		cout << "MINUTES: " << this->minutes << " | ";
		cout << "HOURS: " << this->hours << " | ";
	}
};

class Year {
private:
	int year;
	string months[12] = { "January", "February", "March",
						  "April", "May", "June", "July", "August", 
						  "September", "October", "November",
		                  "December" };
public:
	int setYear(int year) {
		this->year = year;
	}
	int get() {
		cout << "YEARS: " << this->year << " | ";
		
	}
};

class Month {
private:
	int months;
	string name;
	Day day[30];
public:
	int setMonth() {
		do
		{
			cout << "MONTHS: ";
			cin >> this->months;
		} while (this->months >= 0 && this->months <= 30);
		this->day[this->months * 30];
	}
	int get() {
		cout << "M: " << this->months << endl;
	}
};

class Day {
private:
	int days;
	Hours hours[24];
public:
	int setDays() {
		do
		{
			cout << "DAYS: ";
			cin >> this->days;
		} while (this->days >= 0 && this->days <= 30);
		hours[this->days * 24];
	}
	int get() {
		cout << "DAYS: " << this->days << " | ";
	}
};

class Hours {
private:
	int hours;
	Minutes minutes[60];
public:
	int setHours() {
		do
		{
			cout << "HOURS: ";
			cin >> this->hours;
		} while (this->hours >= 0 && this->hours <= 60);
		this->minutes[hours * 60];
	}
	int get() {
		cout << "HOURS: " << this->hours << " | ";
	}
};

class Minutes {
private:
	int mins;
	Entry array[60];
public:
	int setMinutes() {
		do
		{
		cout << "MINUTES: ";
		cin >> this->mins;
		} while (this->mins >= 0 && this->mins <=  60);
		this->array[this->mins * 60];
	}
};

class Entry {
private:
	string title;
	string description;
public:
	int setEntry() {
		cout << "TITLE: ";
		cin >> title;
		cout << "DESCRIPTION: ";
		cin >> description;
	}
	string get() {
		cout << "TITLE: " << this->title << " | ";
		cout << "DESCRIPTION: " << this->description << " | ";
	}
	string getTitle() {
		return this->title;
	}
};

int main() {
	Minutes mins;
	Hours hrs;
	Month mnths;
	Year yrs;
	Book book{ 2023 };

	int choise;

	do
	{
    	cout << "1 - Create a note.\n";
		cout << "2 - Edit a note.\n";
		cout << "3 - Delete a note.\n";
		cout << "YOUR CHOISE: ";
		cin >> choise;
		switch (choise)
		{
		case 1:
			book.createNote();
		case 2:
			cout << "Function don't work.";
		case 3:
			cout << "Function don't work.";
		}
	} while (choise != 1 && choise != 2 && choise != 3);
}
