#include <iostream>
#include <math.h>

using namespace std;
// 1 1 2 5 8 13 21 ... 
// ТЗ: числа від 0
// => first , second
class Progression {
private:
	unsigned long first;
	unsigned long second;
	unsigned long result;
public:
	Progression(unsigned long first, unsigned long second) {
		this->first = first;
		this->second = second;
		this->result = first + second;
	}
	unsigned long getNumberByOrdinal(unsigned int ordinal) {
		return first + second;
		for (int i = 0; i < ordinal; i++) {
			return second += result;
		}
	}
};

int main()
{
	Progression progression1 = { 1,1 };

	cout << progression1.getNumberByOrdinal(20) << endl;
}
