#include <iostream>
#include <Windows.h>

using namespace std;

string question[9] = { "1.What fruit is symbol of Newton?",
					   "2.What fruit has a red and yellow variety and is used in salads?",
					   "3.What fruit is grown on a palm tree and used to produce oil?",
					   "4.What fruit is usually used to make orange juice?",
					   "5.Which fruit is very acidic and is used to make lemonade?",
					   "6.What fruit is usually used to make guacamole?",
					   "7.Which fruit is a symbol of the tropics and is often depicted on the covers of magazines?",
					   "8.Which fruit has a hard crust and juicy pink meat with black seeds inside?",
					   "9.What fruit that has a pungent taste is often used in sushi and Japanese cuisine" };
string answer[9] = { "Apple", "Peach", "Coconut", "Orange", "Lemon", "Avocado", "Palm", "Pomegranate", "Ginger" };

class Tables {
private:
	string question[9];
	string answer[9];
public:
	//--------------------------------------------------------------------------
	void createGraphicsTable(string answer[]) {
		int spaceCout = 0;
		int findingChar = 0;
		for (int i = 0; i < answer[0].length(); i++) {
			for (int j = 0; j < answer[1].length(); j++) {
				if (answer[0][i] == answer[1][j]) {
					spaceCout = i;
					findingChar = j;
					for (int k = j; k != 0; k--) {
						for (int q = 0; q < spaceCout; q++) {
							cout << "   ";
						}
						cout << "| |" << endl;
					}
					break;
				}
			}
		}
		for (int i = 0; i < answer[0].length(); i++) {
			cout << '|' << " " << '|';
		}
		cout << endl;
		for (int i = answer[2].length(); i > findingChar + 1; i--) {
			for (int q = 0; q < spaceCout; q++) {
				cout << "   ";
			}
			cout << "| |" << endl;
		}
		for (int i = answer[3].length(); i > findingChar + 1; i--) {
			for (int q = 0; q < spaceCout; q++) {
				cout << "   ";
			}
			cout << "| |" << endl;
		}
		//--------------------------------------------------------------------------
	}
	Tables(string question[], string answer[]) {
		for (int i = 0; i < 9; i++) {
			this->question[i] = question[i];
			this->answer[i] = answer[i];
		}
		createGraphicsTable(answer);
	}
	void getQuestion() {
		for (int i = 0; i < 9; i++) {
			cout << this->question[i] << endl;
		}
	}

	void setQuestionNumber() {
		int number;
		string your_answer;

		cout << "\nEnter number of question that would you like to answer: ";
		cin >> number;
		cout << "\nEnter answer: ";
		cin >> your_answer;

		for (int i = 0; i < answer->length(); i++) {
			if (number < 10 && number > -1 && your_answer == answer[number-1]) {
				cout << "Good.";
				break;
			}
			else {
				cout << "Uncorrect.";
				setQuestionNumber();
			}
		}
	}
};

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	Tables game{ question,answer };
	game.getQuestion();
	game.setQuestionNumber();
}
